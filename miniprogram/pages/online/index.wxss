/* 整体容器 */
.online-container {
  padding: 24rpx 24rpx 50rpx 24rpx;
  background: linear-gradient(180deg, #f1f5f9 0%, #e2e8f0 100%);
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 顶部标题区域 */
.header {
  margin-bottom: 14rpx;
  padding: 24rpx 0 18rpx 0;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  color: #0f172a;
  margin-bottom: 18rpx;
  letter-spacing: -1rpx;
  line-height: 1.2;
}

.subtitle {
  display: block;
  font-size: 30rpx;
  color: #64748b;
  font-weight: 400;
  line-height: 1.5;
  opacity: 0.9;
  margin-top: 0;
}

/* 操作按钮区域 */
.actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 34rpx;
  flex-wrap: wrap;
  padding: 0 4rpx;
}

.action-btn {
  flex: 1;
  min-width: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 28rpx 20rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  user-select: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.action-btn:hover::before {
  left: 100%;
}

.create-btn {
  background: linear-gradient(145deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(99, 102, 241, 0.35);
}

.clear-btn {
  background: linear-gradient(145deg, #fb7185 0%, #f43f5e 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(251, 113, 133, 0.35);
}

.action-btn:hover {
  transform: translateY(-5rpx) scale(1.02);
  box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.15);
}

.action-btn:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
  font-size: 44rpx;
  margin-bottom: 12rpx;
  line-height: 1;
  filter: drop-shadow(0 3rpx 6rpx rgba(0, 0, 0, 0.15));
}

.btn-text {
  font-size: 28rpx;
  font-weight: 700;
  line-height: 1.3;
  text-align: center;
  letter-spacing: 0.5rpx;
}

/* 房间列表区域 */
.room-list {
  width: 100%;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 35rpx;
  display: block;
  position: relative;
  padding-left: 28rpx;
  letter-spacing: -0.5rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 36rpx;
  background: linear-gradient(180deg, #6366f1 0%, #8b5cf6 100%);
  border-radius: 4rpx;
  box-shadow: 0 3rpx 10rpx rgba(99, 102, 241, 0.3);
}

/* 房间卡片 */
.room-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 28rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  background: white;
  border: 1rpx solid rgba(226, 232, 240, 0.9);
  box-shadow: 0 4rpx 18rpx rgba(0, 0, 0, 0.06);
  width: 100%;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.room-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #6366f1 0%, #8b5cf6 100%);
  opacity: 0;
  transition: opacity 0.35s ease;
}

.room-item:hover::before {
  opacity: 1;
}

.room-item:last-child {
  margin-bottom: 0;
}

.room-item:hover {
  background: #ffffff;
  border-color: rgba(99, 102, 241, 0.2);
  transform: translateY(-5rpx) scale(1.01);
  box-shadow: 0 12rpx 35rpx rgba(0, 0, 0, 0.1);
}

/* 房间信息 */
.room-main-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  min-width: 0;
  margin-right: 28rpx;
}

.room-name {
  font-size: 38rpx;
  font-weight: 700;
  color: #0f172a;
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
  line-height: 1.3;
  letter-spacing: -0.5rpx;
}

.room-status {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #dcfce7 0%, #f0fdf4 100%);
  color: #16a34a;
  border: 1rpx solid #86efac;
  white-space: nowrap;
  box-shadow: 0 3rpx 10rpx rgba(22, 163, 74, 0.15);
}

.room-details {
  display: flex;
  gap: 30rpx;
  align-items: center;
  flex-wrap: wrap;
}

.creator-info {
  display: flex;
  align-items: center;
  gap: 14rpx;
  font-size: 30rpx;
  color: #64748b;
  background: #f8fafc;
  padding: 12rpx 22rpx;
  border-radius: 24rpx;
  border: 1rpx solid #e2e8f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.creator-avatar {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 22rpx;
  font-weight: 700;
  flex-shrink: 0;
  box-shadow: 0 3rpx 10rpx rgba(99, 102, 241, 0.3);
}

.time {
  font-size: 28rpx;
  color: #94a3b8;
  background: #f1f5f9;
  padding: 12rpx 22rpx;
  border-radius: 24rpx;
  border: 1rpx solid #cbd5e1;
  white-space: nowrap;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 加入按钮 */
.room-actions {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.join-btn {
  background: linear-gradient(145deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 22rpx;
  padding: 20rpx 26rpx;
  font-size: 28rpx;
  font-weight: 700;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6rpx 20rpx rgba(99, 102, 241, 0.3);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  user-select: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.join-btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.4);
  transform: translate(-50%, -50%);
  transition: width 0.7s, height 0.7s;
}

.join-btn:hover::after {
  width: 150rpx;
  height: 150rpx;
}

.join-btn:hover {
  background: linear-gradient(145deg, #4f46e5 0%, #7c3aed 100%);
  transform: scale(1.1) rotate(3deg);
  box-shadow: 0 10rpx 30rpx rgba(99, 102, 241, 0.4);
}

.join-btn:active {
  transform: scale(0.95) rotate(0deg);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 160rpx 60rpx;
  background: linear-gradient(135deg, #faf5ff 0%, #f0f9ff 100%);
  border-radius: 28rpx;
  border: 3rpx dashed #c4b5fd;
  box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.7;
  display: block;
  filter: drop-shadow(0 6rpx 16rpx rgba(0, 0, 0, 0.1));
}

.empty-text {
  font-size: 40rpx;
  color: #475569;
  margin-bottom: 20rpx;
  display: block;
  font-weight: 700;
  letter-spacing: -0.5rpx;
}

.empty-hint {
  font-size: 30rpx;
  color: #94a3b8;
  display: block;
  line-height: 1.7;
  font-weight: 400;
}

.empty-action {
  margin-top: 50rpx;
  display: inline-block;
}

.empty-action-btn {
  background: linear-gradient(145deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  border-radius: 70rpx;
  padding: 28rpx 60rpx;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 10rpx 30rpx rgba(99, 102, 241, 0.4);
  user-select: none;
  cursor: pointer;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.empty-action-btn:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 15rpx 40rpx rgba(99, 102, 241, 0.5);
}

.empty-action-btn:active {
  transform: translateY(-2rpx);
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 140rpx 0;
  color: #64748b;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.loading-icon {
  font-size: 100rpx;
  animation: pulse-bounce 2s ease-in-out infinite;
  filter: drop-shadow(0 6rpx 16rpx rgba(99, 102, 241, 0.3));
}

@keyframes pulse-bounce {
  0%, 100% {
    transform: scale(1) translateY(0);
    opacity: 1;
  }
  50% {
    transform: scale(1.15) translateY(-10rpx);
    opacity: 0.75;
  }
}

.loading-text {
  color: #64748b;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 创建房间弹窗 */
.modal-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-card {
  width: 100%;
  max-width: 640rpx;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 36rpx 32rpx 28rpx;
  box-shadow: 0 18rpx 50rpx rgba(15, 23, 42, 0.2);
  box-sizing: border-box;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #0f172a;
  margin-bottom: 10rpx;
}

.modal-subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-bottom: 24rpx;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  border-radius: 18rpx;
  border: 2rpx solid #e2e8f0;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #0f172a;
  background: #f8fafc;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.modal-btn {
  flex: 1;
  height: 76rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  user-select: none;
}

.cancel-btn {
  background: #f1f5f9;
  color: #475569;
  border: 2rpx solid #e2e8f0;
}

.confirm-btn {
  background: linear-gradient(145deg, #6366f1 0%, #8b5cf6 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35);
}
