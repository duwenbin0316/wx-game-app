.container {
  padding: 24rpx;
  background: linear-gradient(180deg, #f7f9fc 0%, #eef2f8 100%);
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
  align-items: stretch;
}

.game-header {
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 28rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid #e2e8f0;
  width: 100%;
  box-sizing: border-box;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  min-height: 48rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #eef2f7;
}

.header-slot {
  flex: 1 1 0;
  display: flex;
  align-items: center;
}

.header-left {
  justify-content: flex-start;
}

.header-right {
  justify-content: flex-end;
}

.mode-pill {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  background: linear-gradient(180deg, #f8fafc 0%, #eef2f7 100%);
  border: 1rpx solid #e2e8f0;
  box-shadow: inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.status-text {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: #6b7280;
}

.status-text.waiting {
  color: #9a3412;
}

.status-text.your-turn {
  color: #2563eb;
}

.status-text.finished {
  color: #059669;
}

.players-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  margin-top: 16rpx;
}

.player-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0 12rpx;
  border-radius: 16rpx;
  transition: all 0.25s ease;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 6rpx 14rpx rgba(15, 23, 42, 0.06);
  width: 280rpx;
  box-sizing: border-box;
  gap: 12rpx;
  height: 56rpx;
}

.player-card.active {
  background: linear-gradient(180deg, #eef5ff 0%, #e6efff 100%);
  border-color: #c7d7ff;
}

.player-card.my-player {
  box-shadow: 0 0 0 2rpx rgba(37, 99, 235, 0.35);
}

.player-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin: 0;
  text-align: center;
  height: 36rpx;
  line-height: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 240rpx;
}

.vs {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #94a3b8;
  letter-spacing: 4rpx;
  padding: 0 8rpx;
  height: 56rpx;
}

.chess-piece {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 4rpx 10rpx rgba(15, 23, 42, 0.18);
  box-sizing: border-box;
  flex: 0 0 auto;
}

.chess-piece.black {
  background: radial-gradient(circle at 30% 30%, #5b6470, #111827);
}

.chess-piece.white {
  background: radial-gradient(circle at 30% 30%, #ffffff, #e5e7eb);
}

.game-board {
  background: #f3f6fb;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 28rpx rgba(31, 41, 55, 0.1);
  border: 1rpx solid #e6ebf2;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.board-grid {
  position: relative;
  background: #f3f6fb;
  border-radius: 12rpx;
  width: 100%;
}

.board-row {
  display: flex;
}

.board-cell {
  flex: 1 0 0;
  height: auto;
  aspect-ratio: 1 / 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

.board-cell::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 1rpx;
  background: #c7d2e3;
  transform: translateY(-50%);
}

.board-cell::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 1rpx;
  background: #c7d2e3;
  transform: translateX(-50%);
}

.board-row .board-cell:first-child::before {
  left: 50%;
}

.board-row .board-cell:last-child::before {
  right: 50%;
}

.board-row:first-child .board-cell::after {
  top: 50%;
}

.board-row:last-child .board-cell::after {
  bottom: 50%;
}

.chess {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  z-index: 2;
  position: relative;
  box-shadow: 0 4rpx 10rpx rgba(17, 24, 39, 0.25);
  box-sizing: border-box;
}

.chess.black {
  background: radial-gradient(circle at 30% 30%, #4b5563, #0f172a);
}

.chess.white {
  background: radial-gradient(circle at 30% 30%, #ffffff, #e5e7eb);
  border: 1rpx solid #e5e7eb;
}

.game-controls {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.restart-btn, .winner-btn, .leave-btn {
  background: #2563eb;
  color: white;
  border-radius: 14rpx;
  font-size: 30rpx;
  padding: 18rpx 36rpx;
  user-select: none;
}

.leave-btn {
  background: #ef4444;
}

.winner-btn {
  background: #10b981;
  animation: pulse 1.1s ease-in-out infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}
