.container {
  padding: 24rpx;
  background: linear-gradient(180deg, #f7f9fc 0%, #eef2f8 100%);
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
  align-items: stretch;
}

.game-header {
  background: linear-gradient(180deg, #ffffff 0%, #f8fafc 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 28rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid #e2e8f0;
  width: 100%;
  box-sizing: border-box;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  min-height: 48rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #eef2f7;
}

.header-slot {
  flex: 1 1 0;
  display: flex;
  align-items: center;
}

.header-left {
  justify-content: flex-start;
}

.header-right {
  justify-content: flex-end;
}

.mode-pill {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  background: linear-gradient(180deg, #f8fafc 0%, #eef2f7 100%);
  border: 1rpx solid #e2e8f0;
  box-shadow: inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.status-text {
  font-size: 26rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: #6b7280;
}

.status-text.waiting {
  color: #9a3412;
}

.status-text.your-turn {
  color: #2563eb;
}

.status-text.finished {
  color: #059669;
}

.players-row {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 24rpx;
  margin-top: 16rpx;
}

.player-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 0 12rpx;
  border-radius: 16rpx;
  transition: all 0.25s ease;
  background: #ffffff;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 6rpx 14rpx rgba(15, 23, 42, 0.06);
  width: 280rpx;
  box-sizing: border-box;
  gap: 12rpx;
  height: 56rpx;
}

.player-card.active {
  background: linear-gradient(180deg, #eef5ff 0%, #e6efff 100%);
  border-color: #c7d7ff;
}

.player-card.my-player {
  box-shadow: 0 0 0 2rpx rgba(37, 99, 235, 0.35);
}

.player-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin: 0;
  text-align: center;
  height: 36rpx;
  line-height: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 240rpx;
}

.vs {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  color: #94a3b8;
  letter-spacing: 4rpx;
  padding: 0 8rpx;
  height: 56rpx;
}

.chess-piece {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1rpx solid #e5e7eb;
  box-shadow: 0 4rpx 10rpx rgba(15, 23, 42, 0.18);
  box-sizing: border-box;
  flex: 0 0 auto;
}

.chess-piece.black {
  background: radial-gradient(circle at 30% 30%, #5b6470, #111827);
}

.chess-piece.white {
  background: radial-gradient(circle at 30% 30%, #ffffff, #e5e7eb);
}

.game-board {
  background-color: #d7ac6b;
  background-image:
    linear-gradient(180deg, #e2b87a 0%, #d2a56a 55%, #c5965d 100%),
    repeating-linear-gradient(90deg, rgba(255, 255, 255, 0.09) 0, rgba(255, 255, 255, 0.09) 10rpx, rgba(0, 0, 0, 0.07) 10rpx, rgba(0, 0, 0, 0.07) 20rpx);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 14rpx 32rpx rgba(96, 60, 15, 0.25);
  border: 2rpx solid #c39256;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.board-grid {
  position: relative;
  background: transparent;
  border-radius: 0;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
  box-shadow:
    inset 0 4rpx 10rpx rgba(255, 255, 255, 0.18),
    inset 0 -4rpx 10rpx rgba(120, 70, 20, 0.18);
}

.lines-layer {
  position: relative;
  z-index: 1;
}

.star-points {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.star-point {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(70, 44, 16, 0.75);
  transform: translate(-50%, -50%);
  box-shadow: 0 0 6rpx rgba(70, 44, 16, 0.25);
}

