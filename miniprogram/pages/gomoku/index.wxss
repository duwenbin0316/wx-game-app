.board-row {
  display: flex;
}

.board-cell {
  flex: 1 0 0;
  height: auto;
  aspect-ratio: 1 / 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  box-sizing: border-box;
}

.board-cell::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: rgba(86, 58, 20, 0.45);
}

.board-cell::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 3rpx;
  background: rgba(86, 58, 20, 0.45);
}

.board-row:last-child .board-cell {
  border-bottom: 3rpx solid rgba(86, 58, 20, 0.45);
}

.board-row .board-cell:last-child {
  border-right: 3rpx solid rgba(86, 58, 20, 0.45);
}

.points-layer {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
  pointer-events: none;
}

.intersection {
  position: absolute;
  width: calc(100% / 14);
  height: calc(100% / 14);
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translate(-50%, -50%);
  pointer-events: auto;
}

