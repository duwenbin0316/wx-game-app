.chess {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  z-index: 2;
  position: relative;
  box-shadow: 0 4rpx 10rpx rgba(17, 24, 39, 0.25);
  box-sizing: border-box;
}

.chess.black {
  background: radial-gradient(circle at 30% 30%, #4b5563, #0f172a);
}

.chess.white {
  background: radial-gradient(circle at 30% 30%, #ffffff, #e5e7eb);
  border: 1rpx solid #e5e7eb;
}

.game-controls {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.restart-btn, .winner-btn, .leave-btn, .invite-btn {
  background: #2563eb;
  color: white;
  border-radius: 14rpx;
  font-size: 30rpx;
  padding: 18rpx 36rpx;
  user-select: none;
}

.invite-btn {
  background: #8b5cf6;
}

.leave-btn {
  background: #ef4444;
}

.winner-btn {
  background: #10b981;
  animation: pulse 1.1s ease-in-out infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}
